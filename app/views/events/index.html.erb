<% if (@events_for)
     @title = "Events for #{@events_for.name}"
   else
     @title = "All Events"
   end
%>
<table>
  <tr>
    <th>Title</th>
    <th>Account</th>
    <th colspan="<%= Client.scopes.size %>"></th>
    <% if @account.admin? %>
    <th></th>
    <th></th>
    <% end %>
  </tr>

<% @events.each do |event| %>
  <tr>
    <td><%= event.title %></td>
    <td><%= event.account.name %></td>
    <% Client.scopes.each_pair do |scope, descr| %>
      <td> <%= link_to descr, event_path(event, :scope => scope) %> </td>
    <% end %>
    <% if @account.admin? %>
    <td><%= link_to 'Edit', edit_event_path(event) %></td>
    <td><%= link_to 'Destroy', event, :confirm => 'Are you sure?', :method => :delete %></td>
    <% end %>
  </tr>
<% end %>
</table>

<br />

<% @links = []
   @links << link_to('New Event', new_event_path) if @account.admin?
%>
