<!DOCTYPE html>
<html>
<head>
  <title><%= @title %></title>
  <meta http-equiv="Content-Type" content="text/html;charset=utf-8"/>
  <%= stylesheet_link_tag :all %>
  <%= '' #javascript_include_tag :defaults
   %>
  <%= csrf_meta_tag %>
</head>
<body>
<section>
  <div id="header">
    <h1><%= @title %></h1>
    <p id="login_status">
    	TBD
    </p>
  </div>
</section>
<section>
  <div id="main">
  <%= yield %>
  </div>
</section>
<section>
  <div id="footer">
    <% if @links and not @links.empty?%>
    <ul>
      <% @links.each do |l| %>
      <li><%= l%></li>
      <% end %>
    </ul>
    <% end %>
  </div>
</section>
</body>
</html>
