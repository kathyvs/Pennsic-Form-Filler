
<% @title = "Edit roles for #{@role_account.name}" %>

<%= form_tag({:action => :roles, :id => @role_account.id}, :method => :put) do -%>
  <h3>Roles</h3>
  <p><% role_checkboxes(@roles, @role_account).each do |checkbox, label| -%>
    <%= checkbox%> <%= label %>
  <% end -%>
  </p>
  <div class="actions">
    <%= submit_tag "Update" %>
  </div>
<% end -%>

