<% @title = 'All accounts' %>

<table>
  <tr>
    <th>Name</th>
    <th>SCA Name</th>
    <th>Contact Info</th>
    <th>Roles</th>
    <th></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @accounts.each do |account| %>
  <tr>
    <td><%= account.name %></td>
    <td><%= account.sca_name%></td>
    <td><%= account.contact_info%></td>
    <td><%= account.roles.map(&:name).join(', ')%></td>
    <td><%= link_to 'Events', events_url(:id => account.id) %></td>
    <td><%= link_to 'Show', account %></td>
    <td><%= link_to 'Edit', edit_account_path(account) %></td>
    <td><%= link_to 'Destroy', account, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<% @links = [link_to 'New Account', new_account_path] %>
